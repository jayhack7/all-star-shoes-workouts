<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/materialViewPager"
                android:fitsSystemWindows="true"
                xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/cv_workout"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true"
        android:gravity="center_horizontal"
        android:animateLayoutChanges="true"
        android:fitsSystemWindows="true"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        >
        <FrameLayout
            android:layout_below="@+id/materialViewPager"
            android:foreground="@drawable/topbottom_gradient"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/iv_workout"
                android:layout_gravity="center_horizontal|top"
                android:adjustViewBounds="true"
                android:src="@drawable/trending_gradient_shape"
                android:scaleType="centerCrop"/>


            <TextView
                android:id="@+id/tv_workout_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textAllCaps="true"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:background="@drawable/listgrad"
                                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"

                />




        </FrameLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>